<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:algolia="http://schemas.android.com/apk/res-auto"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/hit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            algolia:attribute='@{"title"}'/>
        <TextView
            android:id="@+id/hit_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            algolia:attribute='@{"year"}'/>
        <TextView
            android:id="@+id/hit_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            algolia:attribute='@{"rating"}'/>
    </LinearLayout>
</layout>
