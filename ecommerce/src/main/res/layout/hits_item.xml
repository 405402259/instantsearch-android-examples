<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:algolia="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:paddingTop="12dp"
                    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/product_image_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:minWidth="100dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:maxHeight="120dp"
                android:maxWidth="120dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/product_placeholder"
                algolia:attribute='@{"image"}'/>
        </LinearLayout>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/product_image_box"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#111"
            android:textSize="18sp"
            algolia:attribute='@{"name"}'/>

        <com.algolia.instantsearch.examples.ecommerce.WrappedTextView
            android:id="@+id/product_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_toEndOf="@id/product_image_box"
            algolia:attribute='@{"manufacturer"}'
            app:prefix="By "/>

        <TextView
            android:id="@+id/product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/product_name"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/darker_gray"
            algolia:attribute='@{"type"}'/>

        <com.algolia.instantsearch.examples.ecommerce.PriceView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_manufacturer"
            android:layout_toEndOf="@id/product_image_box"
            android:gravity="end"
            android:textSize="18sp"/>

        <com.algolia.instantsearch.examples.ecommerce.PromoView
            android:id="@+id/product_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_toEndOf="@id/product_image_box"
            android:textSize="15sp"/>

        <com.algolia.instantsearch.examples.ecommerce.PreprocessedRatingBar
            android:id="@+id/product_rating"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_promo"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/product_image_box"
            android:progressTint="@color/colorAccent"
            android:rating="4"
            android:secondaryProgressTint="@color/colorAccentSoft"
            android:stepSize="0.1"/>

        <com.algolia.instantsearch.examples.ecommerce.WrappedTextView
            android:id="@+id/product_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_promo"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/product_rating"
            algolia:attribute='@{"customerReviewCount"}'
            app:prefix="("
            app:suffix=")"/>
    </RelativeLayout>
</layout>
